{
    "version": "3.1",
    "compilerOptions": {
        "target": "ES5",
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": false,
        "preserveConstEnums": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "lib": ["es2015"],
        "outDir": "bin"
    },
    "include": [
        "../typings/index.d.ts",
        "config.ts",
        "helpers/*.ts",
        "**/*.spec.ts"
    ]
}